<%= form_for(@barcode) do |f| %>
  <%= hidden_field_tag 'classname', product.class%></td>

  <div class="btn-toolbar pull-right">
    <a href="?edit" class="btn btn-primary">Edit</a>
    <%= f.submit disabled: readonly, class: 'btn btn-primary'%>
  </div>

  <table class='table table-striped table-condensed'>
    <thead>
      <tr><th colspan='2'><%=product.class.to_s.gsub('Product', 'Product')%></th></tr>
    </thead>

    <tbody>
      <% product.class.column_names.each do |cn| %>
        <tr>
          <td><%= cn %></td>
          <td><%= text_field_tag cn, format(product[cn], cn), disabled: readonly%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
